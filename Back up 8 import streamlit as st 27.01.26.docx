        target_ticker = ticker_map.get(currency, "THB=X")
        fetched_rate = get_yahoo_rate(target_ticker)
        if fetched_rate:
            st.session_state['spot_val'] = fetched_rate
            st.success(f"Fetched: {fetched_rate:.4f}")
            
    # Use session state for spot rate
