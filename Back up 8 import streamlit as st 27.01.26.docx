# Helper to fetch rate
def get_yahoo_rate(pair="THB=X"):
    try:
        ticker = yf.Ticker(pair)
        hist = ticker.history(period="1d")
        if not hist.empty:
            return hist["Close"].iloc[-1]
    except Exception as e:
        st.error(f"Error fetching rate: {e}")
    return None

with r2:
